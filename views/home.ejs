<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Title of Web Page -->
    <title><%= title %></title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600&amp;display=swap"
      rel="stylesheet"
    />

    <!-- Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script
      src="https://kit.fontawesome.com/514d9df4a5.js"
      crossorigin="anonymous"
    ></script>

    <!-- CSS FILE -->
    <link rel="stylesheet" href="/css/home.css" type="text/css" />
  </head>
  <body>
    <div class="Main-Heading">
      <!-- TODO List Icon -->
      <i class="fas fa-th-list"></i>
      <!-- TODO Heading -->
      <span><b>Todo List</b></span>
    </div>

    <!-- Create Task Section -->
    <div id="Create-Task-Container">
      <form action="/createItem" method="post">
        <!-- Description Section -->
        <div class="create-description">
          <div class="des-heading">Description</div>
          <input type="text" name="description" />
        </div>

        <!-- Date and Category Section -->
        <div id="date-category-container">
          <div class="date-container">
            <div class="des-heading">Date</div>
            <input type="date" name="date" />
          </div>

          <div class="category-container">
            <div class="des-heading">Category</div>
            <select name="category">
              <option value="choose" disabled>Choose Category</option>
              <option value="School">School</option>
              <option value="Personal">Personal</option>
              <option value="Home">Home</option>
              <option value="Work">Work</option>
              <option value="Others">Others</option>
            </select>
          </div>
        </div>

        <!-- Submit Section -->
        <div id="button-container">
          <button type="submit">
            <i class="fas fa-plus" style="margin-right: 0.2rem"></i>Add
          </button>
        </div>
      </form>
    </div>

    <!-- Stored Task List -->
    <div id="Previous-Task-Container">
      <h1>List Of Activities</h1>
      <div class="todo-list-container">
        <ul>
          <% for(var i of list) {%>
          <li class="todo-item">
            <div class="details">
              <div class="description-container">
                <p><%= i.description %></p>
              </div>

              <div class="list-date">
                <p class="due-date">
                  <i class="far fa-calendar" style="margin-right: 0.3rem"></i
                  >Due Date
                </p>
                <p><%= i.date %></p>
              </div>

              <div class="list-category">
                <p class="list-category-des">Category</p>
                <p><%= i.category %></p>
              </div>

              <a href="/delete-item/?id=<%= i._id %>"
                ><button>
                  <i class="fas fa-trash" style="margin-right: 0.2rem"></i
                  >Delete
                </button>
              </a>
            </div>
          </li>
          <%}%>
        </ul>
      </div>
    </div>

    <script src="/js/home.js" type="text/javascript"></script>
  </body>
</html>
